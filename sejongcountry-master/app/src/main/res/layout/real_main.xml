<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_background"
    tools:context=".domain.main.activity.MainActivity2">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/user_menu"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/user_menu" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/user_menu"
            android:background="@drawable/login_logo" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_menu">

        <LinearLayout
            android:id="@+id/tmp_1"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="90dp">

            <RelativeLayout
                android:layout_weight="1"
                android:id="@+id/tmp_4"
                android:layout_width="190dp"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/lt_button"
                    android:layout_width="215dp"
                    android:layout_height="155dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="7dp"
                    android:background="@drawable/mainmenu_button_1"
                    android:backgroundTint="@null"
                    android:fontFamily="@font/font2"
                    android:gravity="top|center"
                    android:text="방송듣기"
                    android:textColor="@color/black"
                    android:textSize="37dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="180dp"
                android:layout_height="155dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/tmp_4">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/ge_button"
                    android:layout_width="195dp"
                    android:layout_height="155dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/mainmenu_button_2"
                    android:fontFamily="@font/font2"
                    android:text=" 게시판 "
                    android:textColor="@color/black"
                    android:textSize="37dp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ge_button_hide"
                    android:layout_width="200dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="155dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/mainmenu_button_2_1" />

                <Button
                    android:id="@+id/gong_button"
                    android:layout_width="200dp"
                    android:layout_height="78dp"
                    android:layout_marginRight="20dp"
                    android:background="#00ff0000"
                    android:fontFamily="@font/font2"
                    android:text="공지사항"
                    android:textColor="@color/black"
                    android:textSize="36dp"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/gun_button"
                    android:layout_width="200dp"
                    android:layout_height="78dp"
                    android:layout_below="@id/gong_button"
                    android:layout_marginRight="20dp"
                    android:background="#00ff0000"
                    android:fontFamily="@font/font2"
                    android:text="건의사항"
                    android:textColor="@color/black"
                    android:textSize="37dp"
                    android:visibility="invisible" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_below="@id/tmp_1"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:layout_weight="1"
                android:id="@+id/Chat_button"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="25dp"
                android:layout_width="165dp"
                android:layout_height="155dp"
                android:background="@drawable/mainmenu_button_4"
                android:fontFamily="@font/font2"
                android:text="몽룡춘향"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="37dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_weight="1"
                android:id="@+id/setting_button"
                android:layout_toRightOf="@id/Chat_button"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="20dp"
                android:layout_width="165dp"
                android:layout_height="155dp"
                android:background="@drawable/mainmenu_button_3"
                android:gravity="center_horizontal"
                android:fontFamily="@font/font2"
                android:text="   설정   "
                android:textColor="@color/black"
                android:textSize="37dp"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/singo_button"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:background="@drawable/oneonenine"
            android:textSize="25dp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/main_menu_btm" />
    </RelativeLayout>
</LinearLayout>